{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
    <a href="{{ path('ajouter_adresse') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    C'est dans cet espace que vous pourrez modifier vos adresses
    <a href="{{ path('user_index') }}">Retour</a>
    <hr>
    {% if app.user.adresses|length == 0 %}

        <p class="text-center">
            Vous n'avez pas ajoutÃ© d'adresse. Pour en ajouter une, veuillez <a href="{{ path('ajouter_adresse') }}">Cliquez ici</a>
        </p>
    {% else %}
        <div class="row">
            {% for adresse in app.user.adresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ adresse.name }}</h5>
                            <p class="card-text">
                                {{ adresse.adresse }},<br/>
                                {{ adresse.cp }} - {{ adresse.ville }} - {{ adresse.pays }}
                            </p>
                            <a href="">Modifier</a> |  <a href="{{ path('account_address_delete', { 'id' : adresse.id }) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}

{% endblock %}
